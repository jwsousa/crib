extends layout

block content
  h1#header Cribbage by CS productions
  h2.message Welcome
  .game
    .flip
      .cards
    .otherhand
      h3 Other Player's Hand:
      .cards
    .hand
      h3 My Hand:
      .cards
  b.message

    //- a#hand1.button(onClick='showHand(1);') Show Hand1
    //- a#hand1.button(onClick='showHand(2);') Show Hand2
    //- a#cut.button(onClick='showHand(0);') Cut
    script
      //- makeHandDivsMap();

      resetAllUnflipped();
      var socket = io.connect();
      var hand_index;
      var hand;

      socket.on('message', function(message){
        $('.message').html(message);
      });

      socket.on('hand', function (data) {
        hand = data['hand'];
        hand_index = data['index'];
        setCardsOnPage();
        makeCribSelectable();
      });
